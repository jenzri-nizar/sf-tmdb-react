defaults
auth           off
tls            off
tls_starttls   off
logfile        /dev/null

# Exemple pour un serveur de test MailHog
account        mailhog
auth           off
tls            off
tls_starttls   off
host           mailhog
port           1025
from           username@example.com

# Définir le compte par défaut
account default : mailhog